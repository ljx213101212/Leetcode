{
    "tasks": [
        {
            "label": "osx build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++14",
                "-stdlib=libc++",
                "832/832.cpp",
                "main.cpp",
                "-o",
                "main.out",
                "-v"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "win64 build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/ToolChain/Utility/bit_operation/1190.cc",
                "-o",
                "main",
                "src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "msvc build",
            "type": "shell",
            //open native vs2019 developer prompt.
            //cd path_to_leetcode -> code .
            //C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/VC/Tools/MSVC/14.23.28105/bin/Hostx64/x64/
            "command": "cl.exe",
            "args": [
                "Ws2_32.lib",
                "/EHsc",
                "/Zi",
                "/Fe:",
                "src/ToolChain/Utility/file/file_info.cc",
                "out.exe",
                "src/main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "linux build",
            "type": "shell",
            "command": "/home/jixiang/Documents/code/chromium/src/third_party/llvm-build/Release+Asserts/bin/clang++ -O0 -g -fsanitize=address -fno-omit-frame-pointer src/main.cpp -o main.out",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ]
        }
    ],
    "version": "2.0.0"
}